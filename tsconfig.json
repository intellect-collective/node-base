{
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist",
    "removeComments": true,
    "target": "es5",
    "allowJs": true,

    // Module resolution
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",

    // Source Map
    "declaration": true,
    "sourceMap": true,
    "sourceRoot": "/",

    // Strict Checks
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,

    // Linter Checks
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "${configDir}/**/*.ts",
    "${configDir}/**/*.tsx"
  ],
  "exclude": [
    "${configDir}/node_modules/**/*",
    "${configDir}/build/**/*",
    "${configDir}/dist/**/*"
  ]
}
